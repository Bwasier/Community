<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/colorPrimaryDark"
    android:layout_margin="5dp"
    card_view:cardElevation="5dp"
    android:clickable="true"
    android:id="@+id/cardEventsTitle">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        tools:context="fr.solucom.community.EventsTitleFragment">

        <TextView android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="match_parent"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:text="@string/title_section3"
            android:id="@+id/EventsTitle"/>

    </FrameLayout>

</android.support.v7.widget.CardView>
